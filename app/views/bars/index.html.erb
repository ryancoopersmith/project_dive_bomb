<h1>Bars</h1>

<% @bars.each do |bar| %>
  <div class="bar_card">
    <img src="<%=bar.image_url%>" style="max-height: 175px; max-width: 175px;" >
    <p><%= bar.name %> </p>
    <p><%= bar.address %> </p>
    <p><%= bar.city%>, <%=bar.state%> <%=bar.zip%> </p>
    <p id="view_bar"><%= link_to "View Bar", bar_path(bar)%></p>
  </div>
<%end%>

<% if user_signed_in? %>
  <img id="profile_photo" src="<%= current_user.profile_photo %>" />
<% end %>
